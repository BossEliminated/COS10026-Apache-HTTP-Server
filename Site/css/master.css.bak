/* -------------------- Global -------------------- */

/* nick */
body {
  /* removes body default margin */
  background: white;
  margin: 0px;
}

/* nick */
*, *::after, *::before {
  /* sets the total width and height of an element to include border and padding */
  box-sizing: border-box;
}

/* nick */
html {
  /* font stack */
  font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif;
}

/* nick */
p,a,h1,h2 {
  /* remove deafult margin */
  margin: 0px;
  /* set deafult colour */
  color: black;
}

/* -------------------- Global -------------------- */

/* -------------------- nav bar --------------------- */

/* nick */
header {
  background: #808080;
  display: flex;
  height: 60px;
  font-size: 22px;
}

/* nick */
.nav-bar img {
  width: 152px;
  margin: 4px 20px;
}

/* nick */
.nav-links {
  text-decoration: none;
  align-items: center;
  display: flex;
  margin-left: 17px;
}

/* nick */
.nav-links a {
  text-decoration: none;
  color: white;
}

/* yash + nick */
.nav-links a {
  background-color: #808080;
  transition: background-color .5s;
  margin-right: 20px;
  border-radius: 7px;
  padding: 4px;
}

/* yash + nick */
.nav-bar a:hover {
  /* background-color: black; */

  background-color: #0097bf73;
}

/* nick */
a.nav-bar-active {
  text-decoration: underline;
}

/* nick */
hr{
  border: none;
  height: 2px;
  background-color: black;
}

/* nick */
.container{
  width: 95%;
  margin-left: 5%;
  max-width: 1000px;
  margin-top: 20px;
}

